<databaseChangeLog
    xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-3.1.xsd">

    <changeSet id="1" author="Konofeev Roman">
        <createTable tableName="CONTENT">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="content" type="varchar(2000)">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="CONTENT"/>
        </rollback>
    </changeSet>

    <changeSet id="2" author="Konofeev Roman">
        <createTable tableName="BOOK">
            <column name="id" type="int">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="title" type="varchar(50)">
                <constraints nullable="false"/>
            </column>
            <column name="price" type="float">
                <constraints nullable="false"/>
            </column>
            <column name="description" type="varchar(2000)">
                <constraints nullable="false"/>
            </column>
            <column name="nbOfPage" type="int">
                <constraints nullable="false"/>
            </column>
            <column name="illustrations" type="boolean">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <rollback>
            <dropTable tableName="BOOK"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
